## Copy this file to .env (cp env.example .env) and adjust values as needed

# Global versions (switch these to target a specific Odoo/Postgres release)
ODOO_VERSION=18
POSTGRES_VERSION=15

# Passwords (development defaults; change for production)
POSTGRES_PASSWORD=odoo

# Host ports (external) â†’ container ports (internal)
ODOO_HOST_PORT=8069
POSTGRES_HOST_PORT=5433

# Optional: Odoo admin password (for k8s or init flows)
# ODOO_ADMIN_PASSWORD=admin
# POSTGRES_PASSWORD is not used by the Odoo container in Compose anymore; the DB uses 'odoo' by default.