<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_multi_language" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.multi.language</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.view_res_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='settings']" position="inside">
                <div class="app_settings_block" data-string="Multi Language" string="Multi Language" data-key="multi_language">
                    <h2>Multi Language</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="default_greeting" string="Default Greeting"/>
                                <div class="text-muted">Default greeting used in demo messages.</div>
                                <field name="default_greeting"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
